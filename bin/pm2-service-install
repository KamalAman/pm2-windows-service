#!node --harmony

'use strict';

const args = require('yargs')
        .usage('Usage: $0 [-n <service name> -noSetup <boolean>]')
        .alias('n', 'name')
        .boolean('noSetup')
        .argv,
    pm2ws = require('../src/index');

pm2ws.install(args.name, args.noSetup).then(_ => {
    console.log('PM2 service installed and started.');
}, err => {
    console.error('ERROR', err);
    process.exit((err && err.code) || 1);
});
